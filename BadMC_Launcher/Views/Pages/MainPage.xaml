<Page x:Class="BadMC_Launcher.Views.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:BadMC_Launcher"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="MainGrid" utu:SafeArea.Insets="VisibleBounds">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- TitleBar -->
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="6">
                <Button Style="{StaticResource TransparentButton}" Height="36" Width="36">
                    <FontIcon Glyph="&#xE7C4;"/>
                </Button>
                <Button Style="{StaticResource TransparentButton}" Height="36" Width="36"/>
                <TextBlock Text="{Binding WindowName}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        <!-- DashBoard -->
        <Frame Grid.Row="1" x:Name="MainFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Page>
