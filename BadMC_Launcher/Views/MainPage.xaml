<Page x:Class="BadMC_Launcher.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:BadMC_Launcher"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel utu:SafeArea.Insets="VisibleBounds">
        <!--TitleBar-->
        <Border Background="Aqua" Height="48" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="4">
                <Button Height="40" Width="40"/>
                <Button Height="40" Width="40"/>
                <TextBlock/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
