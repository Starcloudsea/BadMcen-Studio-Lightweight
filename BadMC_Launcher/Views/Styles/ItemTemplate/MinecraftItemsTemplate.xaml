<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls">
    <DataTemplate x:Key="MinecraftItemsTemplateSecondary">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.RowSpan="2"
                    Grid.Column="0"
                    Width ="48"
                    Height="48"
                    Margin="6"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    CornerRadius="8"
                    BorderThickness="4"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding MinecraftImagePath}" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
            <TextBlock Grid.Column="1"
                       Grid.Row="0"
                       Text="{Binding MinecraftName}"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       Margin="12, 6, 0, 0"
                       Height="30"
                       TextTrimming="CharacterEllipsis"/>
            <controls:MetadataControl Grid.Column="1"
                                      Grid.Row="1"
                                      Items="{Binding MinecraftTags}"
                                      Style="{ThemeResource BodyStrongTextBlockStyle}"
                                      Margin="12, 0, 6, 0"/>
        </Grid>

    </DataTemplate>
</ResourceDictionary>
