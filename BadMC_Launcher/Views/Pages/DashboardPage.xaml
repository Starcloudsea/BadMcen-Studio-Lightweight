<Page
    x:Class="BadMC_Launcher.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BadMC_Launcher.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!--LaunchPad-->
        <Border Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Margin="0, 16, 16, 16"
                Width="336"
                HorizontalAlignment="Right">
            <Grid>
                <Button x:Name="LaunchButton"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Height="80"
                        Style="{StaticResource AccentButtonStyle}"
                        CornerRadius="0"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        HorizontalContentAlignment="left">
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="8, 0, 0, 0">
                        <Border Height="52" Width="52" HorizontalAlignment="Left" CornerRadius="8" BorderThickness="4" BorderBrush="{ThemeResource ControlFillColorDefaultBrush}">
                            <Border.Background>
                                <ImageBrush Stretch="UniformToFill" ImageSource="\Assets\Icons\MinecraftIcons\Drowned.png"/>
                            </Border.Background>
                        </Border>
                        <StackPanel Spacing="2">
                            <TextBlock x:Uid="DashboardLaunchButtonName"
                                       FontSize="22"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding GameEntryName}"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
